{
  "steps": [
    {
      "listitem": "Setup Staff Woodmin",
      "icon": "/tmp/SetupYourMac/Icons/Branding.png",
      "progresstext": "Creating the Woodleigh Admin Account",
      "trigger_list": [
        {
          "trigger": "dep_staff_woodmin",
          "validation": "None"
        }
      ]
    },
    {
      "listitem": "Setup Token Admin",
      "icon": "/tmp/SetupYourMac/Icons/Branding.png",
